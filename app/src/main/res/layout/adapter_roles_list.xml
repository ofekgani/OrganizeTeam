<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_roleName"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mv_userLogo"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="0dp"
        android:fontFamily="@font/nexa_bold"
        android:gravity="center_vertical"
        android:text="TextView"
        android:textColor="@color/secondaryTextColor"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_roleDescription"
        android:layout_width="128dp"
        android:layout_height="60dp"
        android:layout_below="@+id/tv_roleName"
        android:layout_alignStart="@+id/tv_roleName"
        android:layout_alignBottom="@+id/mv_userLogo"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="15sp"
        android:fontFamily="@font/roboto_medium"
        android:text="TextView"
        android:textColor="@color/secondaryTextColor"
        android:textSize="15dp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_roleName"
        android:layout_alignBottom="@+id/tv_roleName"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="-2dp"
        android:theme="@style/CheckBox"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ed_roleDescription"
        app:layout_constraintTop_toBottomOf="@+id/ed_roleDescription"
        app:layout_constraintVertical_bias="0.0" />

</RelativeLayout>