<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/register_background">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/nexa_bold"
        android:text="Add your phone number"
        android:textColor="@color/black"
        android:textSize="@dimen/welcome_description_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.275" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_bold"
        android:text="* You can add your phone number any time in the settings."
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ed_email2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ed_email2"
        app:layout_constraintTop_toBottomOf="@+id/ed_email2"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/ed_email2"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/edit_text_button"
        android:drawableLeft="@drawable/phone_icon"
        android:drawablePadding="16dp"
        android:elevation="12sp"
        android:ems="10"
        android:fontFamily="@font/roboto_bold"
        android:hint="Phone"
        android:inputType="textEmailAddress"
        android:paddingLeft="18dp"
        android:textColor="@color/gray"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView10"
        app:layout_constraintStart_toStartOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_register4"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:background="@drawable/button"
        android:fontFamily="@font/sans_semi_bold"
        android:gravity="center"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.765" />

    <ProgressBar
        android:id="@+id/pb_singUp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_marginTop="24dp"
        android:indeterminateDrawable="@drawable/progressbar"
        android:progress="50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_register4"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/btn_register4"
        app:layout_constraintTop_toBottomOf="@+id/btn_register4"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="32sp"
        android:layout_height="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.019"
        app:srcCompat="@drawable/back_icon" />

    <ImageView
        android:id="@+id/stepsBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/step_bar" />

    <ImageView
        android:id="@+id/completeStepsBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:scaleX="3.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/stepsBar"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="@+id/stepsBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/access_line" />

    <ImageView
        android:id="@+id/step1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/stepsBar"
        app:layout_constraintEnd_toEndOf="@+id/stepsBar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/stepsBar"
        app:layout_constraintTop_toTopOf="@+id/stepsBar"
        app:layout_constraintVertical_bias="0.41000003"
        app:srcCompat="@drawable/circle" />

    <ImageView
        android:id="@+id/step2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/stepsBar"
        app:layout_constraintEnd_toEndOf="@+id/stepsBar"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="@+id/stepsBar"
        app:layout_constraintTop_toTopOf="@+id/stepsBar"
        app:layout_constraintVertical_bias="0.414"
        app:srcCompat="@drawable/circle" />

    <ImageView
        android:id="@+id/step3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/stepsBar"
        app:layout_constraintEnd_toEndOf="@+id/stepsBar"
        app:layout_constraintStart_toStartOf="@+id/stepsBar"
        app:layout_constraintTop_toTopOf="@+id/stepsBar"
        app:layout_constraintVertical_bias="0.414"
        app:srcCompat="@drawable/circle" />

    <ImageView
        android:id="@+id/step4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/stepsBar"
        app:layout_constraintEnd_toEndOf="@+id/stepsBar"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="@+id/stepsBar"
        app:layout_constraintTop_toTopOf="@+id/stepsBar"
        app:layout_constraintVertical_bias="0.414"
        app:srcCompat="@drawable/access_circle" />

    <ImageView
        android:id="@+id/step5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/stepsBar"
        app:layout_constraintEnd_toEndOf="@+id/stepsBar"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/stepsBar"
        app:layout_constraintTop_toTopOf="@+id/stepsBar"
        app:layout_constraintVertical_bias="0.414"
        app:srcCompat="@drawable/circle" />


    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="@+id/step1"
        app:layout_constraintEnd_toEndOf="@+id/step1"
        app:layout_constraintStart_toStartOf="@+id/step1"
        app:layout_constraintTop_toTopOf="@+id/step1"></TextView>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="@+id/step2"
        app:layout_constraintEnd_toEndOf="@+id/step2"
        app:layout_constraintStart_toStartOf="@+id/step2"
        app:layout_constraintTop_toTopOf="@+id/step2"
        app:layout_constraintVertical_bias="0.538"></TextView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="@+id/step3"
        app:layout_constraintEnd_toEndOf="@+id/step3"
        app:layout_constraintStart_toStartOf="@+id/step3"
        app:layout_constraintTop_toTopOf="@+id/step3"
        app:layout_constraintVertical_bias="0.538"></TextView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="@+id/step4"
        app:layout_constraintEnd_toEndOf="@+id/step4"
        app:layout_constraintStart_toStartOf="@+id/step4"
        app:layout_constraintTop_toTopOf="@+id/step4"
        app:layout_constraintVertical_bias="0.538"></TextView>

    <TextView
        android:id="@+id/tv_common"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="@+id/step5"
        app:layout_constraintEnd_toEndOf="@+id/step5"
        app:layout_constraintStart_toStartOf="@+id/step5"
        app:layout_constraintTop_toTopOf="@+id/step5"
        app:layout_constraintVertical_bias="0.538"></TextView>


</androidx.constraintlayout.widget.ConstraintLayout>