<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_createTeam"
        android:layout_width="115dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button2"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:text="Create team"
        android:textAllCaps="false"
        android:textColor="@color/secondaryColor"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_joinToTeam"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_joinToTeam"
        app:layout_constraintTop_toBottomOf="@+id/btn_joinToTeam"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_joinToTeam"
        android:layout_width="115dp"
        android:layout_height="36dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/button"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:text="Join to team"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:layout_constraintVertical_bias="0.756" />

</androidx.constraintlayout.widget.ConstraintLayout>