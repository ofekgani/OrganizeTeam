<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_taskName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Task Name"
        android:textColor="@color/secondaryTextColor"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/tv_taskStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_taskName"
        android:layout_alignBottom="@+id/tv_taskName"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="1dp"
        android:fontFamily="@font/nexa_light"
        android:gravity="center"
        android:text="Status"
        android:textColor="@color/secondaryTextColor"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_taskDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_taskName"
        android:layout_alignStart="@+id/tv_taskName"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="130dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Task Date"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_taskDescription"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/tv_taskDate"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Task Description"
        android:textColor="@color/secondaryTextColor"
        android:textSize="15sp" />
</RelativeLayout>